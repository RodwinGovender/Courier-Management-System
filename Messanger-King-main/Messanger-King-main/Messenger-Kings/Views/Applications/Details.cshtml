@model Messenger_Kings.Models.Application

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>
<style>

    img {
        max-width: 50%;
        height: 50%;
    }

</style>
<div>
    <h4>Application</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.App_AdminComment)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.App_AdminComment)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IDCard)
        </dt>

        <dd>
            @if (Model.IDCard != null)
            {
                var base64 = Convert.ToBase64String(Model.IDCard);
                var ImgSource = string.Format("data:image/gif;base64,{0}", base64);
                <img class="card-img-top" src="@ImgSource" alt="Card image" width= "1" height="500" />
            }
            
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.App_ID }) |
