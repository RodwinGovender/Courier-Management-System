@model IEnumerable<Messenger_Kings.Models.BankCategory>

@{
    ViewBag.Title = "Index";
}

<h2>List Of Banks</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Bank_Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Bank_Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.BankCat_ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.BankCat_ID }) 
        </td>
    </tr>
}

</table>
