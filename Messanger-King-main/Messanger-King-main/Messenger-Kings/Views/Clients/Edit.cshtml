                                @Html.EditorFor(model => model.Client_Tellnum, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Client_Tellnum, "", new { @class = "text-danger" })
                            </div>
                        </div>
