@model IEnumerable<Messenger_Kings.Models.Booking>

@{
    ViewBag.Title = "OrderList";
}

<h2>Pending Orders</h2>
<hr />
<div class="row">

    @foreach (var item in Model)
    {
        
            <div class="col-md-3">
                <div class="shadow p-3 mb-5 bg-white rounded">

                    <p>Client Name: @Html.DisplayFor(modelItem => item.Client.Client_Name)</p>
                    <p>Item(s) description: @Html.DisplayFor(modelItem => item.Quote.Quote_Description)</p>

                    <p>Pick-up date: @Html.DisplayFor(modelItem => item.Book_PickupDate)</p>
                    <a href='@Url.Action("Create", "Orders", new { id = item.Book_ID }, null)' class="btn btn-success">Accept</a>
                    <a href='@Url.Action("Decline", "Orders", new { id = item.Book_ID }, null)' class="btn btn-secondary">Decline</a>
                </div>
            </div>
     }
    </div>



