@model IEnumerable<Messenger_Kings.Models.Tracking>

@{
    ViewBag.Title = "Tracking";
}

<h2>Tracking</h2>



@using (Html.BeginForm())
{
    <p>
        Find by name: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Order.Driver.Driver_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Track_Message)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Order_Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Out_for_delivery)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pickup_Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Delivery_Status)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Order.Driver.Driver_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Track_Message)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order_Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Out_for_delivery)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pickup_Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Delivery_Status)
            </td>
           
        </tr>
    }

</table>
